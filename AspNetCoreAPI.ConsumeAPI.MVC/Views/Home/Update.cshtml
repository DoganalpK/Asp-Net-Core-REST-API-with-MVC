@model AspNetCoreAPI.ConsumeAPI.MVC.Models.Product

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Update Product</h1>
    <form asp-controller="Home" asp-action="Update" method="post">

        <input type="hidden" asp-for="@Model.Id"/>

        <label>Product Name:</label>
        <input type="text" asp-for="@Model.Name" />
        <br />

        <label>Product Stock:</label>
        <input type="text" asp-for="@Model.Stock" />
        <br />

        <label>Product Price:</label>
        <input type="text" asp-for="@Model.Price" />
        <br />

        <div>
            <button type="submit">Update</button>
        </div>

    </form>

</body>
</html>

